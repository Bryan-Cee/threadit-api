{
  "name": "threadit-api",
  "version": "1.0.0",
  "description": "Chat App",
  "main": "index.ts",
  "repository": "https://github.com/Bryan-Cee/threadit-api.git",
  "author": "Bryce <cheruiyotbryan@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon src/server.ts -e ts,graphql",
    "migrate:latest": "npx knex migrate:latest",
    "migrate:up": "npx knex migrate:up",
    "migrate:down": "npx knex migrate:down",
    "seed": "npx knex seed:run",
    "lint": "eslint .",
    "test": "mocha --recursive --exit",
    "test:dev": "mocha --ignore './test/unit/datasource.spec.js' --watch ./lib/**/*.js ./test/**/*.js --recursive",
    "setup:dev": "NODE_ENV=development node ./setupTest.js && NODE_ENV=development yarn migrate:latest && NODE_ENV=development yarn seed",
    "pretest": "node ./setupTest.js && yarn migrate:latest && yarn seed",
    "posttest": "node ./setupTest.js",
    "heroku-postbuild": "knex migrate:latest"
  },
  "dependencies": {
    "apollo-server": "^2.17.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "express-jwt": "^6.0.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.1",
    "knex": "^0.21.5",
    "pg": "^8.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/express-jwt": "^0.0.42",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
